        public static boolean isPalindrom(int number)
        {
                boolean pali = false;
                if (number == reverse(number))
                {
                        pali = true;
                }
                return pali;
        }
        //6.3 pt.2 method
        public static int reverse(int number)
        {
                String rev = "";
                String n = number + "";

                for (int i = n.length()-1; i >= 0; i--)
                {
                        rev += n.charAt(i);
                }

                return Integer.parseInt(rev);
        }
